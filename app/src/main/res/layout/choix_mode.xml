<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.louyotedouard.test.choixMode">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:weightSum="1"
        android:background="@color/White"
        >
        <LinearLayout
            android:id="@+id/linearLayoutBoutonAvis"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:padding="30px"
            android:layout_weight="0.5">

            <ImageButton
                android:padding="0dip"
                android:id="@+id/btnChoixAvisClient"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/avis_client"
                />

            <TextView
                android:paddingTop="@dimen/padding_medium"
                android:id="@+id/textViewBtnAvis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/stringBtnAvis"
                android:textAppearance="?android:attr/textAppearanceMedium" android:layout_gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutBoutonFormulaire"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:padding="30px"
            android:layout_weight="0.3">

            <ImageButton
                android:padding="0dip"
                android:id="@+id/btnChoixFormulaireInscription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/formulaire_inscription" />

            <TextView
                android:paddingTop="@dimen/padding_medium"
                android:id="@+id/textViewBtnFormulaire"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/stringBtnFormulaire"
                android:textAppearance="?android:attr/textAppearanceMedium" android:layout_gravity="center"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/linearLayoutBoutonPush"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:padding="30px"
            android:layout_weight="0.3">

            <ImageButton
                android:padding="0dip"
                android:id="@+id/btnPush"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/data_hl" />

            <TextView
                android:paddingTop="@dimen/padding_medium"
                android:id="@+id/textViewPush"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/stringPush"
                android:textAppearance="?android:attr/textAppearanceMedium" android:layout_gravity="center"/>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
